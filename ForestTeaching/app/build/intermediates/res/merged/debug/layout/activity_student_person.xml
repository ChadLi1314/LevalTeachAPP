<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/sss_id"
        layout="@layout/titel_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="学生信息"
            android:textSize="19sp"
            android:textColor="@color/selectColor"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="*表示必须项"
            android:textColor="@color/red"
            android:textSize="19sp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/underline_id"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#aa000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="学号:       "
            android:textSize="19sp"
            android:textColor="@color/selectColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/student_id"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:focusableInTouchMode="false"
            android:background="@drawable/forget_password_div"
            android:layout_width="182dp"
            android:layout_height="32dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="密码:       "
            android:textSize="19sp"
            android:textColor="@color/selectColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/student_password"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@drawable/forget_password_div"
            android:layout_width="182dp"
            android:layout_height="32dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="姓名:       "
            android:textSize="19sp"
            android:textColor="@color/selectColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/student_name"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:focusableInTouchMode="false"
            android:background="@drawable/forget_password_div"
            android:layout_width="182dp"
            android:layout_height="32dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="专业班级:"
            android:textSize="19sp"
            android:textColor="@color/selectColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/student_class"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:focusableInTouchMode="false"
            android:background="@drawable/forget_password_div"
            android:layout_width="182dp"
            android:layout_height="32dp" />
    </LinearLayout>


    <Button
        android:id="@+id/input_message"
        android:text="Input Message"
        android:textColor="@color/selectColor"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:maxWidth="200dp"
        android:maxHeight="40dp"
        android:minHeight="30dp"
        android:minWidth="150dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button"
        android:layout_width="159dp"
        android:layout_height="35dp" />



</LinearLayout>
