<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:paddingTop="25dp"
        android:layout_gravity="center"
        android:text="Welcome Login"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/user_id"
        android:requiresFadingEdge="none"
        android:layout_marginTop="60dp"
        android:background="@drawable/input"
        android:popupBackground="@color/selectColor"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_marginTop="210dp"
        android:background="@drawable/input"
        android:layout_gravity="center_horizontal"
        android:minHeight="30dp"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageView
            android:src="@drawable/userid"
            android:layout_gravity="center"
            android:layout_width="36dp"
            android:layout_height="32dp" />
        <EditText
            android:id="@+id/user"
            android:hint="@string/user_text"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:inputType="number"
            android:layout_gravity="center"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/null_img1"
            android:visibility="gone"
            android:src="@drawable/cc"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:background="@drawable/input"
        android:layout_gravity="center_horizontal"
        android:minHeight="30dp"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageView
            android:src="@drawable/password"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_width="31dp"
            android:layout_height="27dp" />
        <EditText
            android:id="@+id/password"
            android:hint="@string/user_password"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:maxLength="15"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/null_img2"
            android:visibility="gone"
            android:src="@drawable/cc"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/hint_msg"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/input_all"
        android:text="Input All"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:maxWidth="200dp"
        android:maxHeight="40dp"
        android:minHeight="30dp"
        android:minWidth="150dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button"
        android:layout_width="159dp"
        android:layout_height="35dp" />
</LinearLayout>
